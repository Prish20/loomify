{
    "compilerOptions": {
      "target": "es2016",
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./",
      "baseUrl": ".",
      "paths": {
        "@generated/*": ["prisma/generated/*"]
      }
    },
    "include": [
      "src/**/*",
      "prisma/generated/**/*"
    ],
    "exclude": ["node_modules", "dist"]
  }
